
#include "stdio.h"
#include "string.h"
#include <iostream>
using namespace std;

void comp_string(char * src_string, char * dest_string);

int main()
{
   char src_string[50] = "My Source string", * src_ptr;
   char dest_string [50] ="I am undefined", * dest_ptr;

   src_ptr = src_string;
   dest_ptr = dest_string;

   cout << "\nDestination string before copy is -->  " << dest_string << endl; 

   comp_string (src_string, dest_string);

   cout << "\nDestination string after copy is -->  " << dest_string << endl;

   return (0);
}

void comp_string(char * src_string, char * dest_string)
{
   strcpy (dest_string,src_string);
}
